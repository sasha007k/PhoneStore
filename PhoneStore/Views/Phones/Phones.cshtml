@using PhoneStore.Models
@model PaginatedList<PhoneStore.Models.PhoneModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Phones";
}

<h1 align="center">@ViewData["Title"]</h1>

<form asp-action="Phones" method="get">
    <div class="form-actions no-color">
        <p>
            Find: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Phones">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <td>
                <b><a asp-action="Phones" asp-route-sortOrder="@ViewData["BrandSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Brand</a></b>
            </td>
            <td>
                <b><a asp-action="Phones" asp-route-sortOrder="@ViewData["ModelSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Model</a></b>
            </td>
            <td>
                <b><a asp-action="Phones" asp-route-sortOrder="@ViewData["PriceSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Price</a></b>
            </td>
            <td><b>Add to shopping cart</b></td>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin"))
                {
                    <td><b>Delete</b></td>
                }
            }
            
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Brand</td>
        <td>@item.Model</td>
        <td>@item.Price</td>
        <td>
            <button class="btn btn-success" width="500px" onclick="location.href='@Url.Action("AddToShoppingCart", "Phones", new { id = item.Id })'">Add</button>
        </td>
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Admin"))
            {
        <td>
            <button class="btn btn-danger" width="100px" onclick="location.href='@Url.Action("DeletePhone", "Phones", new { id = item.Id })'">Delete</button>
        </td>
            }
        }        
    </tr>
    }
</table>

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <div>
            @await Html.PartialAsync("AddPhonePartial", new PhoneStore.Models.PhoneModel())
        </div>
    }
}



@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Phones"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Phones"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
